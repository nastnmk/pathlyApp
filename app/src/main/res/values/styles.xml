        <item name="chipBackgroundColor">@color/light_purple</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="FilterChipStyle.Default" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipStrokeColor">@color/purple</item>
