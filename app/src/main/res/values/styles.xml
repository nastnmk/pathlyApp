        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="FilterChipStyle.Selected" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/dark_purple</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="chipCornerRadius">15dp</item>
